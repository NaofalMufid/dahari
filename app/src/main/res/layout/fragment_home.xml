<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.ypyproductions.view.parallaxscroll.YPYExpandableListView
        android:id="@+id/list_restaurant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:childDivider="@color/black_deviders"
        android:divider="@color/black_deviders"
        android:dividerHeight="1sp"
        android:groupIndicator="@null"
        android:scrollbars="none" />
    
    <com.ypyproductions.view.parallaxscroll.YPYExpandableListView
        android:id="@+id/list_search_restaurant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:childDivider="@color/black_deviders"
        android:divider="@color/black_deviders"
        android:dividerHeight="1sp"
        android:visibility="gone"
        android:groupIndicator="@null"
        android:scrollbars="none" />


    <TextView
        android:id="@+id/tv_no_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:text="@string/info_no_restaurant"
        android:textColor="@color/black_secondary_text"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>